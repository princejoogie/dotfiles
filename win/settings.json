{
  "workbench.settings.editor": "json",

  "editor.fontFamily": "FiraCode Nerd Font",
  "scm.inputFontFamily": "FiraCode Nerd Font",
  "terminal.integrated.fontFamily": "FiraCode Nerd Font",
  "chat.editor.fontFamily": "FiraCode Nerd Font",
  "debug.console.fontFamily": "FiraCode Nerd Font",
  "editor.codeLensFontFamily": "FiraCode Nerd Font",
  "notebook.output.fontFamily": "FiraCode Nerd Font",
  "markdown.preview.fontFamily": "FiraCode Nerd Font",
  "editor.inlayHints.fontFamily": "FiraCode Nerd Font",

  "editor.fontSize": 14,
  "terminal.integrated.fontSize": 14,

  "editor.minimap.enabled": false,
  "editor.scrollbar.vertical": "auto",
  "editor.scrollbar.horizontal": "auto",
  "editor.inlineSuggest.enabled": true,
  "editor.mouseWheelZoom": true,
  "editor.wordWrap": "on",
  "editor.lineNumbers": "relative",

  "apc.activityBar": {
    "position": "bottom",
    "hideSettings": true,
    "size": 28
  },
  "apc.electron": {
    "titleBarStyle": "hiddenInset",
    "trafficLightPosition": {
      "x": 12,
      "y": 10
    }
  },
  "apc.font.family": "FiraCode Nerd Font",
  "apc.monospace.font.family": "FiraCode Nerd Font",
  "apc.statusBar": {
    "position": "editor-bottom",
    "height": 28,
    "fontSize": 12
  },
  "apc.stylesheet": {
    ".sidebar > .composite": "height: 12px !important",
    ".title-label": "display: none !important",
    ".title-actions": "display: none !important",
    ".tabs-and-actions-container > .editor-actions": "display: none !important",
    ".titlebar-center": "display: none !important",
    ".titlebar-right": "display: none !important",
    ".inline-tabs-placeholder": "display: none !important",
    ".split-view-view .visible": "background-color: #110f17 !important"
  },
  "workbench.colorCustomizations": {
    "[Aura Dark]": {
      "editor.background": "#110f17",
      "terminal.background": "#110f17",
      "activityBar.background": "#110f17",
      "statusBar.background": "#110f17",
      "editorGroupHeader.tabsBackground": "#110f17",
      "tab.inactiveBackground": "#110f17"
    }
  },
  "vim.enableNeovim": true,
  "vim.hlsearch": true,
  "vim.incsearch": true,
  "vim.ignorecase": true,
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "j"],
      "after": ["<Esc>"]
    }
  ],
  "vim.normalModeKeyBindings": [
    {
      "before": ["<C-n>"],
      "commands": [":noh"]
    },
    {
      "before": ["<C-p>"],
      "commands": ["workbench.action.quickOpenNavigateNextInFilePicker"]
    },
    {
      "before": ["<C-b>"],
      "commands": ["workbench.action.toggleSidebarVisibility"]
    },
    {
      "before": ["g", "r"],
      "commands": ["editor.action.goToReferences"]
    },
    {
      "before": ["<leader>", "p"],
      "commands": ["editor.action.formatDocument"]
    },
    {
      "before": ["K"],
      "commands": ["editor.action.showHover"]
    },
    {
      "before": ["<leader>", "c", "a"],
      "commands": ["editor.action.codeAction"]
    },
    {
      "before": ["<leader>", "r", "n"],
      "commands": ["editor.action.rename"]
    },
    {
      "before": ["<leader>", "d", "j"],
      "commands": ["editor.action.marker.nextInFiles"]
    },
    {
      "before": ["<leader>", "d", "k"],
      "commands": ["editor.action.marker.prevInFiles"]
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": [">"],
      "commands": ["editor.action.indentLines"]
    },
    {
      "before": ["<"],
      "commands": ["editor.action.outdentLines"]
    },
    {
      "before": ["<leader>", "p"],
      "commands": ["editor.action.formatSelection"]
    }
  ],
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "vim.leader": " ",
  "files.associations": {
    "*.rmd": "markdown"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.iconTheme": "moxer-icons",
  "workbench.colorTheme": "Aura Dark",
  "window.zoomLevel": 1,
  "breadcrumbs.enabled": false,
  "files.trimTrailingWhitespace": true,
  "catppuccin.italicComments": false,
  "catppuccin.italicKeywords": false,
  "window.commandCenter": false,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
}
