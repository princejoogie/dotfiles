#!/bin/bash

# Run a named hook (e.g. post-update, font-set).
# Hooks live in ~/.config/kojarchy/hooks/

set -e

if [[ $# -lt 1 ]]; then
  echo "Usage: kojarchy-hook [name] [args...]"
  exit 1
fi

HOOK_PATH="$HOME/.config/kojarchy/hooks/$1"
shift

if [[ -f "$HOOK_PATH" ]]; then
  bash "$HOOK_PATH" "$@"
fi
