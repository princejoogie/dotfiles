#!/bin/bash

# Toggle RGB lights between green and off via OpenRGB

STATE_FILE="$HOME/.rgb_state"

if [[ -f "$STATE_FILE" && "$(cat "$STATE_FILE")" == "white" ]]; then
    openrgb --mode static --color 000000
    echo "black" > "$STATE_FILE"
    notify-send "RGB lights set to black"
else
    openrgb --mode static --color 11EC57
    echo "white" > "$STATE_FILE"
    notify-send "RGB lights set to white"
fi
